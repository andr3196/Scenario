<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackOnBuild>true</PackOnBuild>
    <PackageId>Scenario.Server</PackageId>
    <PackageVersion>0.9.0</PackageVersion>
    <Authors>Andreas Springborg</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Owners>Andreas Springborg</Owners>
    <PackageProjectUrl>https://github.com/andr3196/Scenario</PackageProjectUrl>
    <Summary>Adds support for client side runtime definition</Summary>
    <PackageTags>Under Developement</PackageTags>
    <Title>Scenario</Title>
    <Description>Scenario is a ASP.NET application extension that allows for client side business logic definition and management at runtime over an existing business domain. </Description>
    <Copyright>Copyright (c) Andreas Springborg 2021</Copyright>
    <LangVersion>10</LangVersion>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Scenario.Api\Scenario.Api.csproj" />
    <ProjectReference Include="..\Scenario.Application\Scenario.Application.csproj" />
    <ProjectReference Include="..\Scenario.Configuration\Scenario.Configuration.csproj" />
    <ProjectReference Include="..\Scenario.Domain\Scenario.Domain.csproj" />
  </ItemGroup>
</Project>
